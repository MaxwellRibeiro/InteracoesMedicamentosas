                    <div class="col s8">
                        <form class="col s12">
                            <div class="input-field col s12">
                                <select multiple name="CbMedicamento" id="CbMedicamento">
                                    <option value="" disabled selected>Selecione os medicamentos para interação </option>
                                    @foreach (var item in Model)
                                    {
                                        <option value=" @Html.DisplayFor(modelItem => item.ProdutoId) ">@Html.DisplayFor(modelItem => item.Nome)</option>
                                    }
                                </select>

                            </div>
                        </form>

                    </div>

                </div>

                <div class="row">
                    <div class="col offset-s5 2s">
                        <a href="#" class="btn btn-default" onclick="MostraInteracaoProduto();">Procurar Interação</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="container-flux">
        <div class="row">
            <div class="col s10 offset-s1 grey lighten-2" style="padding-top: 15px;">
                <div class="row">
                    <div class="col s8" align="left">
                        <h4>Reação entre os medicamentos</h4>
                    </div>                 
                </div>

                <div class="row">
                    <div class="col s12">
                        <form class="col s12">
