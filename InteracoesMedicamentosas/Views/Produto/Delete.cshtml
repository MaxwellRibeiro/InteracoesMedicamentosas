@model InteracoesMedicamentosas.Models.Produto

@{
    Layout = "~/Views/Layout/Shared/_layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <div class="row  grey">
        <div class="col s12 " align="center">
            <p></p>
            <p class="flow-text white-text">Deseja realmente deletar esse Medicamento?</p>
            <p></p>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container-flux">
            <div class="row">
                <div class="col s10 offset-s1 grey lighten-2" style="padding-top: 15px;">
                    <div class="row">
                        <div class="col s6">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                    <hr />
                                </div>
                            </div>

                        </div>
                        <div class="col s6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                                    <hr />
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                                    <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col offset-s5 2s">
                            <a href="@Url.Action("Index", "Produto")" class="btn btn-default">Voltar</a>
                        </div>
                        <div class="col 2s">
                            <input type="submit" value="Deletar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>
