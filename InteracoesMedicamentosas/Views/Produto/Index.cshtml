@model IEnumerable<InteracoesMedicamentosas.Models.Produto>

@{
    Layout = "~/Views/Layout/Shared/_layout.cshtml";
}

<div class="row  grey">
    <div class="col s1"></div>
    <div class="col s10 " align="center">
        <p></p>
        <p class="flow-text white-text">Lista de Medicamentos</p>
        <p></p>
    </div>
    <div class="col s1 " align="right">
        <p></p>
        <a href="@Url.Action("Create", "Produto")" class="btn-floating btn-large waves-effect waves-light blue"><i class="material-icons">add</i></a>
        <p></p>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Produto", new { id = item.ProdutoId })" class="waves-effect waves-light btn #388e3c green darken-2"><i class="material-icons">edit</i></a>
                <a href="@Url.Action("Details", "Produto", new { id = item.ProdutoId })" class="waves-effect waves-light btn #1565c0 blue darken-3"><i class="material-icons">event_note</i></a>
                <a href="@Url.Action("Edit", "Produto", new { id = item.ProdutoId })" class="waves-effect waves-light btn #f44336 red"><i class="material-icons">close</i></a>
               
            </td>
        </tr>
    }

</table>
