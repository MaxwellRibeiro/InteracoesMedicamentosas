@model IEnumerable<InteracoesMedicamentosas.Models.Produto>

@{
    Layout = "~/Views/Layout/Shared/_layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProdutoId }, new { @class = "waves-effect waves-light btn #388e3c green darken-2" })
                @Html.ActionLink("Details", "Details", new { id = item.ProdutoId }, new { @class = "waves-effect waves-light btn #1565c0 blue darken-3" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ProdutoId }, new { @class = "waves-effect waves-light btn #f44336 red" })
            </td>
        </tr>
    }

</table>
